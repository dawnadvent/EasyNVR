<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="service"
            type="easynvr.easy.com.easynvr.Model.ServiceInfo"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/info_toolbar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/colorTheme">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/info_name"
                android:layout_marginRight="60dp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="20sp"/>

        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:id="@+id/below_ll"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:background="@color/colorTheme"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/copyright_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copyright © 2012-2018 www.easynrv.com All rights reversed."
                android:textColor="#4d4d4d"
                android:textSize="12sp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/info_toolbar"
            android:layout_above="@+id/below_ll"
            android:background="#ecf0f6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="30dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_id1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/info4"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="60dp"/>

                <TextView
                    android:id="@+id/version_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="EasyNVR / 1.0"
                    android:textColor="#999999"
                    android:textSize="12sp"/>

                <ImageView
                    android:id="@+id/iv_id2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/info3"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="36dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#ffffff"
                    android:layout_marginTop="60dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/info11"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/info_name"
                        android:textColor="#4d4d4d"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#f2f2f2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="硬件信息"
                        android:textColor="#4d4d4d"
                        android:paddingLeft="10dp"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{service.hardware}"
                        android:textColor="#4d4d4d"
                        android:layout_marginLeft="22dp"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#fafafa">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="接口版本"
                        android:textColor="#4d4d4d"
                        android:paddingLeft="10dp"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{service.interfaceVersion}"
                        android:textColor="#4d4d4d"
                        android:layout_marginLeft="22dp"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#f2f2f2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="运行时间"
                        android:textColor="#4d4d4d"
                        android:paddingLeft="10dp"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{service.runningTime}"
                        android:textColor="#4d4d4d"
                        android:layout_marginLeft="22dp"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#fafafa">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="软件信息"
                        android:textColor="#4d4d4d"
                        android:paddingLeft="10dp"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{service.server}"
                        android:textColor="#4d4d4d"
                        android:layout_marginLeft="22dp"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#ffffff"
                    android:layout_marginTop="30dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/info2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="授权信息"
                        android:textColor="#4d4d4d"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#f2f2f2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="授权对象"
                        android:textColor="#4d4d4d"
                        android:paddingLeft="10dp"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Users"
                        android:textColor="#4d4d4d"
                        android:layout_marginLeft="22dp"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#fafafa">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="剩余时间"
                        android:textColor="#4d4d4d"
                        android:paddingLeft="10dp"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="剩余期限22天"
                        android:textColor="#4d4d4d"
                        android:layout_marginLeft="22dp"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </RelativeLayout>

</layout>
